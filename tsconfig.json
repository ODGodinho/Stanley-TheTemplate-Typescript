{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "#types/*": [ "./@types/*" ]
        },
        "rootDirs": [
            ".",
            "./src"
        ],
        "typeRoots": [
            "./src/@types",
            "node_modules/@types"
        ],
        "types": [
            "node",
            "vitest/globals"
        ]
    },
    "exclude": [
        "node_modules/",
        "dist/"
    ],
    "extends": "@odg/tsconfig/tsconfig.node.json",
    "include": [ "." ]
}
